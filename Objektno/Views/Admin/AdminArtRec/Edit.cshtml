@model KonobApp.Model.Models.ArticleReceiptModel

@{
    ViewBag.Title = "Edit";
}

<h2>Uredi</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>ArticleReceiptModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.IDReceipt, "IDReceipt", htmlAttributes: new { @class = "control-label col-md-2" })
