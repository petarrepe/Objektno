<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
assembly="DAL"
namespace="DAL.Models">
  <class name="Receipt" table="Receipt" batch-size="25">
    <id name="IDReceipt">
      <generator class="native" />
    </id>
    <property name="IDWaiter" not-null="true" />
    <property name="IDUser" />
    <property name="Date" not-null="true" />
    <property name="IDPaymentMethod" not-null="true" />
    <property name="TotalCost" not-null="true" />
    <property name="Discount" />

    <bag name="ArtRec" lazy="true" inverse="true" batch-size="25" cascade="all-delete-orphan">
      <key column="IDRecept" />
      <one-to-many class="ArticleReceipt" />
    </bag>
    <many-to-one name="User" class="User" column="IDUser" />
    <many-to-one name="Waiter" class="Waiter" column="IDWaiter" />
    <many-to-one name="PaymentMethod" class="PaymentMethod" column="IDPaymentMethod" />

  </class>
</hibernate-mapping>
